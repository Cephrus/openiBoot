	'#malloc.c',
	'#tasks.c',
	'#printf.c',
	'#framebuffer.c',
	'#acm.c',
	'#usb.c',
	'#commands.c',
	'#stb_image.c',

	's5l8920.c',
	'usbphy.c',
	'buttons.c',
	'chipid.c',
	'clock.c',
	'event.c',
	'gpio.c',
	'i2c.c',
	'interrupt.c',
	'lcd.c',
	'miu.c',
	'mmu.c',
	'power.c',
	'spi.c',
	'timer.c',
	'uart.c',
	])# + hfs_src
Export('plat_s5l8920_src')

env.SConscript('iPhone3GS.SConscript', 'env')
